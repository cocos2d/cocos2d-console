#!/bin/sh

COCOS_CONSOLE_BIN_DIRECTORY=$(dirname "$0")

export COCOS_CONSOLE_BIN_DIRECTORY=$(cd "$COCOS_CONSOLE_BIN_DIRECTORY" && pwd -P)
export COCOS_CONSOLE_PLUGIN_PATH=$(cd "$COCOS_CONSOLE_BIN_DIRECTORY/../plugins" && pwd -P)
export COCOS_CONSOLE_CONFIG_PATH=$COCOS_CONSOLE_BIN_DIRECTORY
export COCOS_CONSOLE_LOG_PATH=$(cd ~ && pwd -P)/.cocos2d

exec python "$COCOS_CONSOLE_BIN_DIRECTORY/cocos.py" "$@"
